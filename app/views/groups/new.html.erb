<div class="wrapper row2">
  <div id="container" class="clear"> 
    <!-- ####################################################################################################### -->
    <div id="content">
      <h1>New Group</h1>
      
      <%= form_for @group, url: {action: "create"} do |f| %>
      <% if @group.errors.any? %>
      <ul>
	<% @group.errors.full_messages.each do |msg| %>
	<li><%= msg %></li>
	<% end %>
      </ul>
      <% end %>
      <p>
	<strong class="one_quarter">Name</strong>
	<%= f.text_field :name %>
      </p>
      <p>
	<strong class="one_quarter">Reason</strong>
	<%= f.text_field :reason %>
      </p>
      <p>
	<%= f.submit "Create" %>
	<a href="/groups" class="btn btn-primary">Cancel</a>
      </p>
      <% end %>
    </div>
  </div>
</div>

